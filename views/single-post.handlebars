<div id='data' data-postID="{{post.id}}" data-userID="{{post.userID}}">
    <h1> Title: {{post.title}} <br>
        Post Content: {{post.comment}} <br>
        User: {{post.user.user_name}}</h1>

    {{#each comments}}
        <h1>
            <h2>TEST Comment</h2>
            Comment: {{postComment}} <br>
            User: {{user.username}} <br>
            DateCreated: {{createdAt}}
        </h1>
    {{/each}}

    <form class="form new-comment-form">
        <div class="form-group">
            <label for="title">Comment</label>
            <input class="form-input" type="text" id="comment" name="comment" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary" id="newCommentSubmit">Create</button>
        </div>
    </form>
</div>

<script src="/js/submitComment.js"></script>